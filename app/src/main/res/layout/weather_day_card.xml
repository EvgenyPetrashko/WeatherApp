<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGray">

        <ImageView
            android:id="@+id/weather_day_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/weather_icon"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"/>



        <TextView
            android:id="@+id/weather_day_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="June 18"
            android:layout_toEndOf="@id/weather_day_image"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/weather_day_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Rainy"
            android:layout_toEndOf="@id/weather_day_date"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/weather_day_max_min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="18/14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>